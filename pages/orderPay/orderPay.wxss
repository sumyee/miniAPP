/* pages/orderPay/orderPay.wxss */

page {
  background: #f5f5f5;
}

.orderPay {
  padding-bottom: 130rpx;
}

.orderPay-pro-list {
  padding: 0 24rpx;
  background: #fff;
  border-top: 1rpx solid #f5f5f5;
}

.tableNO {
  display: flex;
  height: 100rpx;
  line-height: 100rpx;
  align-items: center;
  padding: 0 24rpx;
  margin-top: 20rpx;
  background: #fff;
}

.tableNO-text {
  width: 280rpx;
  font-size: 28rpx;
  color: #0d0d0d;
}

.tableNO-input {
  flex: 1;
  display: inline-block;
  font-size: 30rpx;
  color: #3c3c3c;
  vertical-align: middle;
  text-align: right;
}

.payment-type {
  display: flex;
  height: 100rpx;
  line-height: 100rpx;
  align-items: center;
  padding: 0 24rpx;
  margin-top: 20rpx;
  background: #fff;
}

.payment-type_icon {
  width: 44rpx;
  height: 44rpx;
}

.payment-type_text {
  flex: 1;
  padding-left: 20rpx;
  font-size: 30rpx;
  color: #303030;
}

