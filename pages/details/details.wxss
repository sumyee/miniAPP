/* pages/details/details.wxss */

.details-con {
  /* padding-bottom: 112rpx; */
  background: #f8f8f8;
}

.details-box {
  background: #fff;
}

.cover-image {
  /* width: 100%; */
  height: 0;
  padding-bottom: 56%;
  margin: 10rpx 24rpx 0;
  background-repeat: no-repeat;
  background-position: center;
  background-size: cover;
  box-shadow: 0 10rpx 35rpx #999;
}

.nightclub-info {
  padding: 24rpx;
  margin-top: 26rpx;
}

.business-hours {
  font-size: 24rpx;
  color: #ff5833;
  min-height: 34rpx;
}

.nightclub-name-con {
  display: flex;
  align-items: center;
  min-height: 50rpx;
}

.nightclub-name {
  flex: 1;
  font-size: 36rpx;
  color: #0d0d0d;
}

.nightclub-like {
  width: 44rpx;
  height: 44rpx;
  margin: 0 30rpx;
}

.nightclub-type {
  font-size: 28rpx;
  color: #a4a4a4;
  min-height: 40rpx;
}

.nightclub-features {
  display: flex;
  width: 100%;
  height: 150rpx;
  /* margin-top: 6rpx; */
  align-items: center;
}

.nightclub-features-item {
  flex: 1;
  text-align: center;
}

.nightclub-features-image {
  width: 44rpx;
  height: 44rpx;
}

.nightclub-features-text {
  display: block;
  font-size: 24rpx;
  color: #636466;
}

/* comment  */

.comment {
  margin-top: 20rpx;
  background: #fff;
  padding: 20rpx 0 0;
}

/* introduction  */

.introduction {
  margin-top: 20rpx;
  background: #fff;
  padding: 20rpx 0 132rpx;
  text-align: center;
}

/* club info  */

.club-logo {
  width: 120rpx;
  height: 120rpx;
  margin: 30rpx auto 0;
}

.club-logo image {
  width: 100%;
  height: 100%;
  border-radius: 100%;
}

.club-name {
  font-size: 36rpx;
  color: #0d0d0d;
  margin-top: 20rpx;
}

.club-info {
  font-size: 28rpx;
  color: #636466;
  line-height: 1.6;
  margin-top: 20rpx;
  padding: 0 30rpx;
  font-weight: lighter;
}

.club-image {
  margin-top: 20rpx;
  /* width: 100%; */
  height: 0;
  padding-bottom: 56%;
  margin-left: 24rpx;
  margin-right: 24rpx;
  background-repeat: no-repeat;
  background-position: center;
  background-size: cover;
}

/* bottom-bar  */

.bottom-bar {
  position: fixed;
  display: flex;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 112rpx;
  align-items: center;
  background: #fff;
  box-shadow: 0 -4rpx 20rpx 0 #f5f5f5;
}

.book-btn {
  width: 200rpx;
  height: 72rpx;
  line-height: 72rpx;
  font-size: 28rpx;
  color: #fff;
  text-align: center;
  margin: 0 24rpx;
  background-image: linear-gradient(-224deg, #fcb903 0%, #fc9d03 100%);
  border-radius: 4rpx;
}
.book-btn::after {
  border: none;
}
.menu-btn {
  position: relative;
  flex: 1;
  text-align: right;
  /* height: 46rpx; */
  line-height: 60rpx;
}

.menu-btn-text {
  position: relative;
  font-size: 28rpx;
  color: #a4a4a4;
  margin-right: 50rpx;
}

.menu-btn .icon {
  position: absolute;
  top: 50%;
  right: 30rpx;
  content: " ";
  display: inline-block;
  height: 16rpx;
  width: 16rpx;
  border-width: 2rpx 2rpx 0 0;
  border-color: #c8c8c8;
  border-style: solid;
  transform: translateY(-50%) matrix(0.71, 0.71, -0.71, 0.71, 0, 0);
}

/* comfirmBtn  */

.comfirmBtn {
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  font-size: 30rpx;
  color: #f5f5f5;
  background-image: linear-gradient(-45deg, #fc9d03 0%, #fcb903 100%);
}
