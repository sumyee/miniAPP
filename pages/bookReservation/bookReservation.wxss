/* pages/bookReservation/bookReservation.wxss */

page {
  background: #f5f5f5;
}

.book-info {
  display: flex;
  padding: 0 24rpx;
  text-align: center;
  background: #fff;
}

.book-info_item {
  flex: 1;
  padding: 30rpx 0 26rpx;
  border-top: 1rpx solid #f5f5f5;
  /* border-right: 1rpx solid #f5f5f5; */
}

.book-info_item_mian {
  font-size: 24rpx;
  color: #a4a4a4;
}

.book-info_item_sub {
  font-size: 36rpx;
  color: #0d0d0d;
  margin-top: 10rpx;
  font-weight: bold;
}

.remark-con {
  width: 100%;
  background: #fff;
  padding: 0 30rpx;
  margin-top: 20rpx;
}

.remark {
  width: 100%;
  font-size: 28rpx;
  background: #fff;
  padding: 24rpx 0;
}

.phone {
  display: flex;
  height: 100rpx;
  line-height: 100rpx;
  align-items: center;
  border-bottom: 1rpx solid #f5f5f5;
}

.phone-text {
  width: 280rpx;
  font-size: 28rpx;
  color: #0d0d0d;
}

.phone-input {
  flex: 1;
  display: inline-block;
  font-size: 30rpx;
  color: #3c3c3c;
  vertical-align: middle;
  text-align: right;
}

.comfirm-btn {
  position: fixed;
  left: 4%;
  bottom: 30rpx;
  width: 92%;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  margin: 0 auto;
  font-size: 30rpx;
  color: #fff;
  background-image: linear-gradient(-224deg, #fcb903 0%, #fc9d03 100%);
  border-radius: 2px;
}
