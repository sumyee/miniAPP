/* pages/orderDetails/orderDetails.wxss */

page {
  background: #f5f5f5;
}

.orderDetails-con {
  flex: 1;
  padding: 20rpx 24rpx 130rpx;
  /* margin-bottom: 120rpx; */
}

.orderDetails-title {
  font-size: 0;
  padding: 30rpx 30rpx 0;
  background: #fff;
  background: radial-gradient(circle at top left, transparent 0, #fff 0) top left,
                radial-gradient(circle at top right, transparent 0, #fff 0) top right,
                radial-gradient(circle at bottom right, transparent 10rpx, #fff 0) bottom right,
                radial-gradient(circle at bottom left, transparent 10rpx, #fff 0) bottom left;
  background-size: 50%;
  background-repeat: no-repeat;
}

.orderDetails-title_con {
  display: flex;
  padding-bottom: 30rpx;
  border-bottom: 2rpx solid #f5f5f5;
}

.orderDetails-title_name {
  flex: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.orderDetails-title_name_main {
  font-size: 36rpx;
  color: #303030;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.orderDetails-info {
  padding: 30rpx 30rpx 0;
  background: #fff;
  background: radial-gradient(circle at top left, transparent 10rpx, #fff 0) top left,
                radial-gradient(circle at top right, transparent 10rpx, #fff 0) top right,
                radial-gradient(circle at bottom right, transparent 10rpx, #fff 0) bottom right,
                radial-gradient(circle at bottom left, transparent 10rpx, #fff 0) bottom left;
  background-size: 50%;
  background-repeat: no-repeat;
}

.orderDetails-title_name_sub {
  font-size: 28rpx;
  color: #9d9d9d;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.orderDetails-title_logo {
  width: 100rpx;
  height: 100rpx;
  margin-left: 24rpx;
  border-radius: 100%;
}

.orderDetails-info-con {
  padding-top: 10rpx;
  padding-bottom: 30rpx;
  border-bottom: 2rpx solid #f5f5f5;
}

.orderDetails-info_book-con {
  display: flex;
}

.orderDetails-info_book-con_orderNo {
  flex: 2;
}

.orderDetails-info_book-con_deskNo {
  flex: 1;
}

.orderDetails-info_book-con_menNo {
  flex: 1;
}

.orderDetails-info_main {
  font-size: 28rpx;
  color: #9d9d9d;
  padding-right: 10rpx;
}

.orderDetails-info_sub {
  font-size: 30rpx;
  color: #fc9e02;
  margin-top: 14rpx;
  padding-right: 10rpx;
  word-break:break-all;
}

.orderDetails-info_time-con {
  display: flex;
  margin-top: 50rpx;
}

.orderDetails-info_time-con_book {
  flex: 1;
}

.orderDetails-info_time-con_order {
  flex: 1;
}

.orderDetails-details {
}

.orderDetails-details_title {
  font-size: 28rpx;
  color: #636466;
  padding: 30rpx 0 20rpx;
}

.orderDetails-amount {
  display: flex;
  align-items: center;
  padding: 30rpx;
  background: #fff;
  background: radial-gradient(circle at top left, transparent 10rpx, #fff 0) top left,
                radial-gradient(circle at top right, transparent 10rpx, #fff 0) top right,
                radial-gradient(circle at bottom right, transparent 0, #fff 0) bottom right,
                radial-gradient(circle at bottom left, transparent 0, #fff 0) bottom left;
  background-size: 50%;
  background-repeat: no-repeat;
}

.orderDetails-amount_title {
  flex: 1;
  font-size: 28rpx;
  color: #9d9d9d;
}

.orderDetails-amount_price {
  flex: 1;
  text-align: right;
  font-size: 36rpx;
  color: #fc5003;
}

.pay-btn {
  position: fixed;
  width: 100%;
  left: 0;
  bottom: 0;
  font-size: 30rpx;
  color: #fff;
  letter-spacing: 4rpx;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  background-image: linear-gradient(-45deg, #fcb903 100%, #fc9d03 0%);
}
