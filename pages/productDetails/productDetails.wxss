/* pages/productDetails/productDetails.wxss */

page {
  background: #f5f5f5;
}

.product-details {
  width: 100%;
  background: #fff;
}

.product-details_image {
  width: 100%;
  height: 520rpx;
  border: 1rpx solid #f5f5f5;
}

.product-details_con {
  padding: 20rpx 24rpx;
}

.product-details_name {
  font-size: 30rpx;
  line-height: 46rpx;
  color: #303030;
  margin: 10rpx 0;
}

.product-details_desc {
  font-size: 28rpx;
  line-height: 42rpx;
  color: #676769;
  margin: 20rpx 0;
}

.product-details_price-con {
  display: flex;
  align-items: center;
  margin-top: 10rpx;
}

.product-details_price {
  flex: 1;
  font-size: 30rpx;
  color: #fc5003;
  font-weight: bold;
}

.product-details_count {
  width: 188rpx;
}
