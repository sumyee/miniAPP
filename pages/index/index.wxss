/**index.wxss**/
page {
  background: #f5f5f5;
}

.navigator-hover {
  background: transparent;
}

.index-header {
  display: flex;
  position: sticky;
  top: 0;
  width: 100%;
  height: 95rpx;
  line-height: 95rpx;
  align-items: center;
  background-color: #fff;
  box-shadow: 0 3rpx 16rpx 0 #F5F5F5;
  z-index: 10;
}
.index-search {
  flex: 1;
}
.index-search-input {
  /* width: 80%; */
  height: 60rpx;
  line-height: 60rpx;
  margin: 0 20rpx 0 30rpx;
  color: #a4a4a4;
  font-size: 24rpx;
  background-color: #f5f5f5;
  border-radius: 200rpx;
  text-indent: 30rpx;
  text-align: center;
}
.index-cityfilter-select {
  margin: 0 40rpx 0 20rpx;
  font-size: 28rpx;
  color: #303030;
}

.ico_down{
  display: inline-block;
  width: 0;
  height: 0;
  border: 4px solid transparent ;
  border-top-color:#9d9d9d ;
  vertical-align: middle;
  margin-top: 6rpx;
  margin-left: 10rpx;
}