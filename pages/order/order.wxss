/* pages/order/order.wxss */
page {
  background: #f5f5f5;
}
.swiper-tab {
  /* position: fixed; */
  position: sticky;
  top: 0;
  left: 0;
  width: 100%;
  text-align: center;
  height: 88rpx;
  line-height: 88rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  background: #fff;
  box-shadow: 0 2rpx 0 0 #f5f5f5;
  border-bottom: 1rpx solid #f5f5f5;
  transition: all .3s;
  z-index: 2;
}

.tab-item {
  position: relative;
  flex: 1;
  font-size: 30rpx;
  text-align: center;
  color: #9d9d9d;
  display: inline-block;
  transition: all .3s;
}

.active {
  color: #FCB903;
}

.on {
  position: absolute;
  left: 25%;
  bottom: 0;
  width: 50%;
  height: 4rpx;
  background: #FCB903;
  transition: all .3s;
}

