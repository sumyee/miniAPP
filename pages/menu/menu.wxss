/* pages/menu/menu.wxss */

.overflow {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  width: 100%;
}

.schedule-con {
  display: flex;
  width: 100%;
  position: absolute;
  bottom: 0;
  left: 0;
  top: 240rpx;
  overflow-y: scroll;
  overflow-x: hidden;
  word-break: break-all;
  background: #f5f5f5;
}

.schedule-con_scroll {
  padding: 50rpx 24rpx 200rpx 50rpx;
}

.content {
  display: flex;
  width: 100%;
  position: absolute;
  bottom: 100rpx;
  left: 0;
  top: 240rpx;
  overflow: hidden;
}

.menu-container {
  width: 200rpx;
  flex: 0 0 200rpx;
  background: #f6f6f6;
}

.detail-container {
  flex: 1;
  height: 100%;
}

.scroll-view {
  width: 100%;
  height: 100%;
}

.scroll-view-ul {
  width: 100%;
  /* height: 100%; */
  padding-bottom: 100rpx;
}

.scroll-view-item {
  height: 100rpx;
  width: 100%;
  font-size: 28rpx;
  color: #303030;
  border-left: 8rpx solid transparent;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
}

.scroll-view-item:after {
  content: '';
  left: 0;
  right: 0;
  bottom: 0;
  height: 1px;
  background-color: #dfdfdf;
  transform: scaleY(0.5);
  position: absolute;
}

.scroll-view-item.active {
  background: #fff;
  color: #fcb903;
  border-left: 8rpx solid #fcb903;
}

.market-scroll-list {
  height: 100%;
}

.market-scroll-list .title {
  height: 55rpx;
  font-size: 24rpx;
  color: #888;
  background-color: #f6f6f6;
  padding-left: 25rpx;
  line-height: 55rpx;
}

.inner {
  padding: 30rpx 24rpx 30rpx 30rpx;
  position: relative;
}

.inner-pro-con {
  display: flex;
}

.inner:after {
  content: '';
  left: 30rpx;
  right: 0;
  bottom: 0;
  height: 1px;
  background-color: #dfdfdf;
  transform: scaleY(0.5);
  position: absolute;
}

.cover {
  width: 100rpx;
  height: 100rpx;
  border: 1px solid #f8f8f8;
  background: #f8f8f8;
}

.cover-img {
  width: 100%;
  height: 100%;
  background-repeat: no-repeat;
  background-position: center;
  background-size: cover;
}

.info {
  flex: 1;
  padding: 0 0 0 20rpx;
  font-size: 0;
  overflow: hidden;
}

.info-title {
  color: #303030;
  font-size: 30rpx;
}

.info-subtitle {
  color: #9d9d9d;
  font-size: 24rpx;
  margin-top: 10rpx;
}

.info-desc {
  color: #666;
  font-size: 22rpx;
  margin-top: 5rpx;
}

.text {
  position: absolute;
  bottom: 0;
  font-size: 22rpx;
  color: #666;
}

.inner-pro-price {
  display: flex;
  margin-top: 20rpx;
  align-items: center;
}

.inner-pro-price_price {
  flex: 1;
  font-size: 30rpx;
  color: #fc5003;
  font-weight: bold;
}

.inner-pro-price_count {
  width: 188rpx;
}

/*  */

.menu-tab {
  display: flex;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  border-top: 2rpx solid #f5f5f5;
  border-bottom: 2rpx solid #f5f5f5;
  background: #fff;
}

.menu-tab_schedule-con {
  flex: 1;
  position: relative;
}

.menu-tab_menu-con {
  flex: 1;
  position: relative;
}

.menu-tab_text {
  /* height: 100%; */
  font-size: 30rpx;
  color: #9d9d9d;
  letter-spacing: 2rpx;
  display: inline-block;
}

.menu-tab_text.active {
  color: #fcb903;
}

.menu-tab_text.active .line {
  position: absolute;
  display: none;
  font-size: 0;
  bottom: -1rpx;
  width: 130rpx;
  height: 4rpx;
  color: #fcb903;
  background: #fcb903;
}

.menu-tab_text.active .line {
  display: inline-block;
}

.cart-title {
  margin-top: 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.cart-srcoll {
  width: 100vw;
  max-height: 70vh;
  padding-bottom: 30rpx;
  margin-bottom: 100rpx;
}

.cart-pro-item {
  display: flex;
  height: 100rpx;
  padding: 0 24rpx;
  align-items: center;
}

.cart-pro-item_name {
  flex: 1;
  font-size: 30rpx;
  color: #303030;
}

.cart-pro-item_price {
  width: 180rpx;
  font-size: 28rpx;
  color: #fc5003;
  margin: 0 20rpx;
  font-weight: bold;
}

.cart-pro-item_count {
  width: 188rpx;
}

.book-cancel-con {
  position: fixed;
  display: flex;
  bottom: 20rpx;
  left: 2.5%;
  width: 95%;
  height: 136rpx;
  align-items: center;
  background: #fff;
  background: #fff;
  box-shadow: 0 0 16rpx 0 #ededed;
  border-radius: 4rpx;
}

.book-cancel-title_mian {
  font-size: 30rpx;
  color: #0d0d0d;
}

.book-cancel-title_sub {
  font-size: 24rpx;
  color: #a4a4a4;
}

.book-cancel-title {
  flex: 1;
  padding-left:30rpx;
}

.book-cancel-btn {
  width: 160rpx;
  height: 60rpx;
  line-height: 60rpx;
  margin: 0 30rpx;
  text-align: center;
  font-size: 24rpx;
  color: #fff;
  background-image: linear-gradient(-224deg, #fcb903 100%, #fc9d03 0%);
  border-radius: 200rpx;
}
