/* pages/search/search.wxss */

page {
  background: #fff;
}

.search-con {
  display: flex;
  position: sticky;
  top: 0;
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  align-items: center;
  background-color: #fff;
  box-shadow: 0 3rpx 16rpx 0 #f5f5f5;
  z-index: 2;
}

.search-input-con {
  flex: 1;
  margin: 0 30rpx 0 20rpx;
}

.search-icon {
  display: inline-block;
  margin-left: 30rpx;
  line-height: 1;
}

.search-input {
  font-size: 28rpx;
}

.search-btn {
  /* width: 88rpx; */
  color: #0d0d0d;
  font-size: 28rpx;
  margin: 0 24rpx 0 0;
}

.search-btn-text {
  line-height: 1;
  padding-left: 24rpx;
  border-left: 1rpx solid #e5e5e5;
}

.search-history-con {
  padding: 30rpx;
}

.search-history-item {
  position: relative;
  display: inline-flex;
  margin: 10rpx;
  font-size: 26rpx;
  color: #333;
  background-color: #f5f5f5;
  border-radius: 30rpx;
  align-items: center;
  /* border: 1rpx solid #999; */
}

.search-history-item_text {
  flex: 1;
  display: inline-block;
  padding: 10rpx 30rpx;
  word-break: break-all;
  border-radius: 30rpx 0 0 30rpx;
}

.search-history-item_del {
  width: 50rpx;
  padding: 10rpx 30rpx;
  border-radius: 0 30rpx 30rpx 0;
  border-left: 1rpx solid #e5e5e5;
  font-size: 22rpx;
  color: #777;
}

.search-history-item icon {
  position: absolute;
  top: -10rpx;
  right: -10rpx;
}
